### Base stage
FROM python:3.9-slim AS base-stage

RUN adduser --no-create-home --disabled-password --home /app --shell /bin/ash app
WORKDIR /app

COPY docker/entrypoint*.sh /
COPY docker/run-tests.sh /
COPY docker/test-coverage.sh /
COPY requirements.txt ./
COPY requirements_dev.txt ./

ENTRYPOINT ["/entrypoint.sh"]

### Development stage
FROM base-stage AS development-stage

ARG APP_ENV
ARG PIPENV_USERNAME
ARG PIPENV_PASSWORD

RUN pip install -r requirements.txt && pip install -r requirements_dev.txt

### Build stage
FROM base-stage AS build-stage

COPY . ./

ARG PIPENV_USERNAME
ARG PIPENV_PASSWORD

RUN pip install -r requirements.txt

### Production stage
FROM build-stage AS production-stage

ENV GUNICORN_CMD_ARGS="--workers=3"

USER app
